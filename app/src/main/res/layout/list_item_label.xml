<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder">
        <TextView
            android:id="@+id/lineId"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/write"
            android:textSize="25sp"
            android:singleLine="true"
            android:text="线体" />



        <TextView
            android:id="@+id/classId"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/write"
            android:textSize="25sp"
            android:singleLine="true"
            android:gravity="center"
            android:text="班次" />



        <TextView
            android:id="@+id/lineLeader"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dip"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:gravity="center"
            android:text="产线负责人" />


        <TextView
            android:id="@+id/productionNum"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/write"
            android:singleLine="true"
            android:textSize="25sp"
            android:gravity="center"
            android:text="产品编号" />


        <TextView
            android:id="@+id/productionName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dip"
            android:textColor="@color/write"
            android:textSize="25sp"
            android:singleLine="true"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="产品名称" />


        <TextView
            android:id="@+id/planNum"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingBottom="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="计划数" />

        <TextView
            android:id="@+id/offLineNum"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingBottom="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="下线数" />

        <TextView
            android:id="@+id/difference"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingBottom="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="差额" />

        <TextView
            android:id="@+id/completionRate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingBottom="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="完成率（%）" />

        <TextView
            android:id="@+id/workStatu"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dip"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/write"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="生产状态" />

    </LinearLayout>

</LinearLayout>
